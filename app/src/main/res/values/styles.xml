<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView_Note_Item_Title">
        <item name="android:color">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme_Create_Note_Screen" parent="AppTheme">
        <item name="android:textViewStyle">@style/TextView_Input_Title</item>
    </style>

    <style name="TextView_Input_Title">
        <item name="android:color">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
